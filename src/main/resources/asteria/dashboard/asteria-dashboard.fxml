<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="800" prefWidth="1280"
            stylesheets="@styles.css"
            xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1">

    <ScrollPane id="scroll-viewport" fitToWidth="true" fitToHeight="true" hbarPolicy="NEVER" styleClass="scroll-pane" AnchorPane.topAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0">

        <VBox alignment="TOP_CENTER" spacing="25" styleClass="page" prefWidth="1280">

            <VBox alignment="CENTER" spacing="8" styleClass="header">
                <Pane prefHeight="120" prefWidth="120" styleClass="logo"/>

                <Label text="ASTERIA" styleClass="title"/>

                <Label text="Insights of the stars" styleClass="subtitle"/>
            </VBox>

            <HBox id="greeting-bar" alignment="CENTER_LEFT" styleClass="greeting-bar">
                <Label text="Greetings, astral ✦" styleClass="greeting-text"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Label text="☾" styleClass="moon-icon"/>
            </HBox>

            <VBox fx:id="watchlistSection" styleClass="section" spacing="10" maxWidth="1060">
                <Label text="WATCHLIST" styleClass="section-title"/>

                <ScrollPane fx:id="watchlistScroll"
                            styleClass="watchlist-scroll"
                            vbarPolicy="NEVER"
                            fitToHeight="true"
                            pannable="true"
                            prefViewportHeight="76">

                    <HBox fx:id="watchlistBox"
                          alignment="CENTER_LEFT"
                          spacing="14"
                          styleClass="watchlist-row"
                          minHeight="76"/>
                </ScrollPane>
            </VBox>

            <VBox styleClass="section" spacing="12" maxWidth="1060">
                <Label styleClass="section-title, centered"/>

                <HBox spacing="18">
                    <VBox styleClass="card, card-big" HBox.hgrow="ALWAYS" spacing="10">
                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <Label text="↗" styleClass="card-icon, card-icon-green"/>
                            <Label text="Trend Signal" styleClass="card-kicker"/>
                        </HBox>
                        <Label fx:id="trendValue" text="Gentle upward" styleClass="card-title"/>
                    </VBox>

                    <VBox styleClass="card, card-big" HBox.hgrow="ALWAYS" spacing="10">
                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <Label text="〰" styleClass="card-icon"/>
                            <Label text="Volatility" styleClass="card-kicker"/>
                        </HBox>
                        <Label fx:id="volValue" text="Low and calm" styleClass="card-title"/>
                    </VBox>
                </HBox>

                <HBox spacing="18">
                    <VBox styleClass="card, card-small" HBox.hgrow="ALWAYS" spacing="8">
                        <HBox spacing="10" alignment="CENTER">
                            <Label text="↗" styleClass="mini-icon, card-icon-green"/>
                            <Label text="Market Mood" styleClass="mini-kicker"/>
                        </HBox>
                        <Label fx:id="marketMoodPill" text="Uptrend" styleClass="pill"/>
                    </VBox>

                    <VBox styleClass="card, card-small" HBox.hgrow="ALWAYS" spacing="8">
                        <HBox spacing="10" alignment="CENTER">
                            <Label text="◉" styleClass="mini-icon"/>
                            <Label text="Watchlist" styleClass="mini-kicker"/>
                        </HBox>
                        <Label fx:id="watchlistCount" text="4 symbols" styleClass="mini-value"/>
                    </VBox>

                    <VBox styleClass="card, card-small" HBox.hgrow="ALWAYS" spacing="8">
                        <HBox spacing="10" alignment="CENTER">
                            <Label text="✦" styleClass="mini-icon"/>
                            <Label text="AI Suggests" styleClass="mini-kicker"/>
                        </HBox>
                        <Label fx:id="aiSuggestValue" text="Review BBCA" styleClass="mini-value"/>
                    </VBox>
                </HBox>
            </VBox>

            <Region prefHeight="30"/>

        </VBox>
    </ScrollPane>
</AnchorPane>
